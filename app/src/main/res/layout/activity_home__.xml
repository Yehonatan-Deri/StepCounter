<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="219dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/daily_background_shape_up"
            android:id="@+id/daily_layout_up" app:layout_constraintBottom_toTopOf="@+id/daily_layout_middle"
            app:layout_constraintTop_toTopOf="parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  tools:ignore="MissingConstraints"
                  android:text="0"
                  android:textSize="70sp" android:textStyle="bold"
                  android:id="@+id/daily_text_view_steps"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="37dp"
                  app:layout_constraintBottom_toTopOf="@+id/daily_text_view_goal"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.47000003"
                  app:layout_constraintEnd_toStartOf="@+id/daily_button_start_stop" android:layout_marginEnd="160dp"/>
        <TextView
                android:text="/5000 Steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/daily_text_view_goal"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/daily_text_view_steps"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/daily_progress_bar"
        />

        <ImageButton
                android:layout_width="53dp"
                android:layout_height="57dp" app:srcCompat="@android:drawable/ic_media_play"
                android:id="@+id/daily_button_start_stop"
                tools:ignore="MissingConstraints"
                android:background="#00FFFFFF" android:backgroundTint="#4CAF50"
                android:contentDescription="start/stop"
                android:layout_marginStart="160dp"
                app:layout_constraintStart_toEndOf="@+id/daily_text_view_goal" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="48dp" android:layout_marginEnd="72dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="359dp"
                android:layout_height="21dp"
                android:id="@+id/daily_progress_bar"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/daily_text_view_goal"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/daily_layout_up"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/daily_background_shape_up"
            android:id="@+id/daily_layout_middle"
            app:layout_constraintBottom_toTopOf="@+id/daily_layout_down">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/height"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/daily_image_view_km"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
                app:layout_constraintEnd_toStartOf="@+id/daily_image_view_calories" android:layout_marginEnd="72dp"
                app:layout_constraintBottom_toTopOf="@+id/daily_text_view_km1"/>
        <TextView
                android:text="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:ignore="MissingConstraints"
                android:id="@+id/daily_text_view_km1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="36dp" app:layout_constraintTop_toBottomOf="@+id/daily_image_view_km"
                app:layout_constraintBottom_toTopOf="@+id/daily_text_view_km2"
                app:layout_constraintEnd_toStartOf="@+id/daily_text_view_calories1" android:layout_marginEnd="75dp"/>
        <TextView
                android:text="km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:ignore="MissingConstraints"
                android:id="@+id/daily_text_view_km2"
                app:layout_constraintTop_toBottomOf="@+id/daily_text_view_km1"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"/>


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/height"
                android:id="@+id/daily_image_view_calories"
                android:layout_marginStart="72dp" app:layout_constraintStart_toEndOf="@+id/daily_image_view_km"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:text="600.8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:ignore="MissingConstraints"
                android:id="@+id/daily_text_view_calories1"
                tools:layout_editor_absoluteX="144dp"
                app:layout_constraintTop_toBottomOf="@+id/daily_image_view_calories"
                app:layout_constraintBottom_toTopOf="@+id/daily_text_view_calories2"/>
        <TextView
                android:text="Calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:id="@+id/daily_text_view_calories2"
                app:layout_constraintTop_toBottomOf="@+id/daily_text_view_calories1"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                android:layout_marginStart="67dp" app:layout_constraintStart_toEndOf="@+id/daily_text_view_km2"
                app:layout_constraintEnd_toStartOf="@+id/daily_text_view_time2" android:layout_marginEnd="10dp"/>


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/height"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/daily_image_view_time"
                android:layout_marginTop="8dp" android:layout_marginEnd="38dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="103dp"
                app:layout_constraintStart_toEndOf="@+id/daily_image_view_calories"
                app:layout_constraintBottom_toTopOf="@+id/daily_text_view_time1"/>
        <TextView
                android:text="1h 6m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:ignore="MissingConstraints"
                android:id="@+id/daily_text_view_time1"
                app:layout_constraintTop_toBottomOf="@+id/daily_image_view_time" android:layout_marginStart="103dp"
                app:layout_constraintStart_toEndOf="@+id/daily_text_view_calories1" android:layout_marginEnd="19dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/daily_text_view_time2"/>
        <TextView
                android:text="Walking Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:ignore="MissingConstraints"
                android:id="@+id/daily_text_view_time2"
                app:layout_constraintTop_toBottomOf="@+id/daily_text_view_time1" android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/daily_text_view_calories2" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/daily_background_shape_up"
            android:id="@+id/daily_layout_down"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/daily_layout_middle"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" android:text="Last week daily average: "
                android:id="@+id/daily_text_view1" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/daily_text_view_average"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        />
        <TextView
                android:text="6789.9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/daily_text_view_average"
                android:textSize="24sp" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/daily_text_view1"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                android:layout_marginTop="8dp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      app:layout_constraintTop_toBottomOf="@+id/daily_text_view_average"
                      android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent" android:orientation="horizontal"
                      android:gravity="center" android:id="@+id/linearLayout"
                      app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/height"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S" android:textStyle="bold" android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/height"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S" android:textStyle="bold" android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/height"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S" android:textStyle="bold" android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/height"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S" android:textStyle="bold" android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/height"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S" android:textStyle="bold" android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/height"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S" android:textStyle="bold" android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/height"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S" android:textStyle="bold" android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/teal_700"
            app:itemIconTint="@drawable/home_nav_bar"
            app:itemTextColor="@drawable/home_nav_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_navigation"
    />

</androidx.constraintlayout.widget.ConstraintLayout>